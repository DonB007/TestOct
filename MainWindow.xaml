<Window x:Class="TestOct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:TestOct"
        xml:lang="en-IN"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="500" Width="960">
    <!-- RESOURCES -->
    <Window.Resources>
        <ObjectDataProvider
			x:Key="selectColumn"
			ObjectType="{x:Type local:SelectOptions}" />


        <local:TextBoxNotEmptyValidationRule x:Key="TextBoxNotEmptyValidationRule"/>
        <local:NumericValidationRule x:Key="NumericValidationRule"/>

        <Style x:Key="textBoxInError" TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"
					        Value="{Binding RelativeSource={x:Static RelativeSource.Self},
					Path=(Validation.Errors)/ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <ControlTemplate x:Key="validationTemplate">
            <DockPanel>
                <TextBlock Foreground="Red" FontSize="20">!</TextBlock>
                <AdornedElementPlaceholder/>
            </DockPanel>
        </ControlTemplate>


        <local:RadioButtonCheckedConverter
			x:Key="RadioButtonCheckedConverter" />
        <local:SelectedItemToItemsSource
			x:Key="SelectedItemToItemsSource" />
        <local:StringToDecimal
			x:Key="StringToDecimal"/>
        <!--		<local:DateTimeConverter
			x:Key="converter" />-->
        <DataTemplate
			x:Key="UserGrid">
            <Border
				Background="Transparent"
				BorderBrush="White"
				BorderThickness="1"
				CornerRadius="5">
                <Grid
					Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
							Width="1*" />
                        <ColumnDefinition
							Width="7*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="Party"
						Grid.Row="1"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="BillNo"
						Grid.Row="2"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="BillDt"
						Grid.Row="3"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="Amt"
						Grid.Row="4"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="DueDt"
						Grid.Row="5"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="PaidOn"
						Grid.Row="6"
						Grid.Column="0" />
                    <TextBlock
						FontSize="14"
						Margin="5"
						Text="Remarks"
						Grid.Row="7"
						Grid.Column="0" />
                    <!--					<TextBox
						FontSize="14"
						Text="{Binding Party, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="1"
						Foreground="#80D8FF"
						Background="Transparent" />
					<TextBox
						FontSize="14"
						Text="{Binding BillNo, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="2"
						Foreground="#80D8FF"
						Background="Transparent" />
					<DatePicker
						FontSize="14"
						SelectedDate="{Binding BillDt, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="3"/>
					<TextBox
						FontSize="14"
						Text="{Binding Amt, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="4"
						Foreground="#80D8FF"
						Background="Transparent" />
					<DatePicker
						FontSize="14"
						SelectedDate="{Binding DueDt, StringFormat='dd-MM-yyyy', BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="5" />
					<DatePicker
						FontSize="14"
						SelectedDate="{Binding PaidOn, StringFormat='dd-MM-yyyy', BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="6" />
					<TextBox
						FontSize="14"
						Text="{Binding Remarks, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="7"
						Foreground="#80D8FF"
						Background="Transparent" />-->

                    <TextBox x:Name="Party"
					         FontSize="14"
					         Validation.ErrorTemplate="{StaticResource validationTemplate}"  Style="{StaticResource textBoxInError}"
					         Grid.Column="1"
					         Grid.Row="1"
					         Foreground="#80D8FF"
					         Background="Transparent" >
                        <TextBox.Text>
                            <Binding Path="Party"   BindingGroupName="Group1" UpdateSourceTrigger="PropertyChanged" >
                                <Binding.ValidationRules>
                                    <local:TextBoxNotEmptyValidationRule x:Name="PartyValidation" ValidatesOnTargetUpdated="True"
										Message="you must enter a party name"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox x:Name="BillNo"
					         FontSize="14"
					         Validation.ErrorTemplate="{StaticResource validationTemplate}"  Style="{StaticResource textBoxInError}"
					         Grid.Column="1"
					         Grid.Row="2"
					         Foreground="#80D8FF"
					         Background="Transparent" >
                        <TextBox.Text>
                            <Binding Path="BillNo"   BindingGroupName="Group1" UpdateSourceTrigger="PropertyChanged" >
                                <Binding.ValidationRules>
                                    <local:TextBoxNotEmptyValidationRule x:Name="BillNoValidation" ValidatesOnTargetUpdated="True"
										Message="you must enter string."/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <DatePicker
						FontSize="14"
						SelectedDate="{Binding BillDt, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="3" />
                    <TextBox x:Name="Amount"
					         FontSize="14"
					         Validation.ErrorTemplate="{StaticResource validationTemplate}"  Style="{StaticResource textBoxInError}"
					         Grid.Column="1"
					         Grid.Row="4"
					         Foreground="#80D8FF"
					         Background="Transparent" >
                        <TextBox.Text>
                            <Binding Path="Amt" Converter="{StaticResource StringToDecimal}" StringFormat="N2" BindingGroupName="Group1" UpdateSourceTrigger="PropertyChanged" >
                                <Binding.ValidationRules>
                                    <local:NumericValidationRule x:Name="AmtValidation" ValidatesOnTargetUpdated="True"
										Message="You must enter decimal."/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <DatePicker
						FontSize="14"
						SelectedDate="{Binding DueDt, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="5" />
                    <DatePicker
						FontSize="14"
						SelectedDate="{Binding PaidOn, TargetNullValue='', BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="6" />
                    <TextBox
						FontSize="14"
						Text="{Binding Remarks, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"
						Grid.Column="1"
						Grid.Row="7"
						Foreground="#80D8FF"
						Background="Transparent" />
                    <StackPanel
						Orientation="Horizontal"
						Grid.Row="8"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Right"
						Margin="5,5,5,5">
                        <Button
							Width="75"
							FontSize="15"
							Command="{Binding DataContext.AddCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
							Margin="4,0">
                            <fa:ImageAwesome
								Icon="Plus"
								Foreground="#0091EA"
								Height="20"
								Width="25" />
                        </Button>
                        <Button
							Width="75"
							FontSize="15"
							Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
							Margin="4,0">
                            <fa:ImageAwesome
								Icon="Minus"
								Foreground="#0091EA"
								Height="20"
								Width="25" />
                        </Button>
                        <!--						<Button
							Width="75"
							FontSize="15"
							Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
							Margin="4,0">
							<fa:ImageAwesome
								Icon="Save"
								Foreground="#0091EA"
								Height="20"
								Width="25" />
						</Button>-->
                        <Button
							Width="75"
							FontSize="15"
							Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
							Margin="4,0">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">


                                    <Setter
										Property="Foreground"
										Value="Yellow" />
                                    <Setter
										Property="FontFamily"
										Value="Helvetica" />
                                    <Setter
										Property="FontWeight"
										Value="SemiBold" />
                                    <Setter
										Property="Background"
										Value="Transparent" />
                                    <Setter
										Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate
												TargetType="{x:Type Button}">
                                                <Border
													Background="{TemplateBinding Background}"
													CornerRadius="20"
													BorderThickness="2"
													BorderBrush="Tomato">
                                                    <ContentPresenter
														HorizontalAlignment="Center"
														VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>


                                    <Setter Property="IsEnabled" Value="false" />
                                    <Style.Triggers>

                                        <Trigger
											Property="IsMouseOver"
											Value="True">
                                            <Setter
												Property="Background"
												Value="White" />
                                            <Setter
												Property="Opacity"
												Value="0.8" />
                                            <Setter
												Property="Foreground"
												Value="Indigo" />
                                            <Setter
												Property="FontWeight"
												Value="ExtraBold" />
                                        </Trigger>

                                        <Trigger
											Property="IsEnabled"
											Value="false">
                                            <Setter
												Property="Background"
												Value="White" />
                                            <Setter
												Property="Opacity"
												Value="0.2" />
                                            <Setter
												Property="Foreground"
												Value="Indigo" />
                                            <Setter
												Property="FontWeight"
												Value="ExtraBold" />
                                        </Trigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=Amount, Path=(Validation.HasError)}" Value="false" />
                                                <Condition Binding="{Binding ElementName=Party, Path=(Validation.HasError)}" Value="false" />
                                                <Condition Binding="{Binding ElementName=BillNo, Path=(Validation.HasError)}" Value="false" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="true" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <fa:ImageAwesome
								Icon="Save"
								Foreground="#0091EA"
								Height="20"
								Width="25" />
                        </Button>
                        <Button
							Width="75"
							Height="30"
							FontSize="15"
							Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
							Margin="4,0">
                            <fa:ImageAwesome
								Icon="Close"
								Foreground="#0091EA"
								Height="20"
								Width="25" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <!--Window start-->
    <Border
		CornerRadius="5"
		Background="#263238">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
					Height="30" />
                <RowDefinition
					Height="*" />
            </Grid.RowDefinitions>
            <!-- First row : Housing the close, maximize & minimize buttons -->
            <StackPanel>
                <Label
					Margin="10, 2, 10, 2"
					FontSize="15"
					HorizontalContentAlignment="Left"
					Content="Bill Management System"
					Foreground="AliceBlue" />
            </StackPanel>
            <StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Center">
                <Ellipse
					x:Name="minimize"
					Fill="Green"
					Height="20"
					Width="20"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="0 5 10 0"
					ToolTip="Minimize"
					RenderTransformOrigin="0.5,0.5"
					MouseLeftButtonDown="Minimize_MouseLeftButtonDown" />
                <Ellipse
					x:Name="maximize"
					Fill="Yellow"
					Height="20"
					Width="20"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="0 5 10 0"
					ToolTip="Maximize"
					MouseLeftButtonDown="Maximize_MouseLeftButtonDown" />
                <Ellipse
					x:Name="quit"
					Fill="Red"
					Height="20"
					Width="20"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					Margin="0 5 10 0"
					ToolTip="Close"
					MouseLeftButtonDown="Quit_MouseLeftButtonDown" />
            </StackPanel>
            <!--TabControl Items-->
            <Grid
				Background="{DynamicResource PrimaryBG}"
				Name="grid"
				Grid.Row="2">
                <TabControl
					HorizontalAlignment="Center"
					HorizontalContentAlignment="Stretch"
					Margin="0,0,0,0"
					Name="tabControl1"
					VerticalAlignment="Stretch">
                    <!-- 1st tabitem -->
                    <TabItem
						Header="Dashboard"
						Name="default"
						Background="{DynamicResource Darkish}"
						Foreground="AntiqueWhite"
						HorizontalContentAlignment="Center"
						VerticalAlignment="Stretch"
						Width="180"
						HorizontalAlignment="Center"
						FontFamily="Leelawadee UI"
						FontSize="20"
						Margin="0,0,0,0"
						Padding="0,0,0,0">
                        <Border
							Background="{DynamicResource Darkish}"
							Margin="0,0,0,0"
							Padding="0,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Stretch"
							Width="{Binding ElementName=grid,Path=ActualWidth}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition
										Height="5*" />
                                    <RowDefinition
										Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
										Width="Auto" />
                                    <ColumnDefinition
										Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
									Grid.Row="0"
									Text="FY21-22"
									TextDecorations="Underline"
									Grid.Column="1"
									Foreground="#FF7043"
									FontWeight="DemiBold"
									Margin="10 5 5 5"
									VerticalAlignment="Bottom"
									FontFamily="Segoe UI Historic"
									FontSize="17"
									TextAlignment="Center" />
                                <TextBlock
									Grid.Row="0"
									Name="pendingBillsLabel"
									Grid.Column="0"
									FontWeight="DemiBold"
									Foreground="#29B6F6"
									Margin="27 5 5 5"
									VerticalAlignment="Bottom"
									FontFamily="Segoe UI Historic"
									FontSize="14"
									TextAlignment="Left" />
                                <DataGrid
									ItemsSource="{Binding PendingBills}"
									IsSynchronizedWithCurrentItem="False"
									Grid.Row="1"
									IsReadOnly="True"
									Background="#212121"
									CanUserAddRows="false"
									Grid.Column="0"
									Grid.ColumnSpan="2"
									HorizontalAlignment="Stretch"
									Margin="25,10,25,20"
									Name="realized"
									BorderBrush="Transparent"
									RowBackground="#388E3C"
									AlternatingRowBackground="#2E7D32"
									ScrollViewer.CanContentScroll="True"
									Foreground="White"
									HeadersVisibility="Column"
									SelectionUnit="FullRow"
									GridLinesVisibility="None"
									AutoGenerateColumns="False"
									HorizontalGridLinesBrush="Transparent"
									VerticalGridLinesBrush="Transparent"
									VerticalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn
											Header="Vendor"
											Binding="{Binding Path=Party, Mode=OneWay}"
											Width="275"
											IsReadOnly="True" />
                                        <DataGridTextColumn
											Header="Bill No."
											Binding="{Binding Path=BillNo, Mode=OneWay}"
											Width="275"
											IsReadOnly="True" />
                                        <DataGridTextColumn
											Header="Bill Date"
											Binding="{Binding Path=BillDt2, Mode=OneWay}"
											Width="75"
											IsReadOnly="True" />
                                        <DataGridTextColumn
											Header="Amount"
											Binding="{Binding Path=Amt, StringFormat=N2, Mode=OneWay}"
											Width="75"
											IsReadOnly="True" />
                                        <DataGridTextColumn
											Header="Due Date"
											Binding="{Binding Path=DueDt2, Mode=OneWay}"
											Width="75"
											IsReadOnly="True" />
                                    </DataGrid.Columns>
                                    <DataGrid.Resources>
                                        <Style
											TargetType="DataGridRow">
                                            <Setter
												Property="IsHitTestVisible"
												Value="False" />
                                        </Style>
                                        <Style
											BasedOn="{StaticResource {x:Type DataGridColumnHeader}}"
											TargetType="{x:Type DataGridColumnHeader}">
                                            <Setter
												Property="Background"
												Value="#827717" />
                                            <Setter
												Property="FontSize"
												Value="15" />
                                            <Setter
												Property="FontWeight"
												Value="DemiBold" />
                                        </Style>
                                        <Style
											TargetType="{x:Type DataGrid}">
                                            <Setter
												Property="ColumnWidth"
												Value="*"></Setter>
                                            <Setter
												Property="FontSize"
												Value="13"></Setter>
                                        </Style>
                                    </DataGrid.Resources>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </TabItem>
                    <!--2nd TabItem-->
                    <TabItem
						Header="Forwarding"
						Name="tabItem1"
						Background="{DynamicResource Darkish}"
						Foreground="AntiqueWhite"
						HorizontalContentAlignment="Center"
						VerticalAlignment="Stretch"
						Width="180"
						HorizontalAlignment="Center"
						FontFamily="Leelawadee UI"
						FontSize="20"
						Margin="0,0,0,0"
						Padding="0,0,0,0">
                        <Border
							Background="{DynamicResource Darkish}"
							Margin="0,0,0,0"
							Padding="0,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Stretch"
							Width="{Binding ElementName=grid,Path=ActualWidth}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition
										Height="30" />
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition
										Height="auto" />
                                    <RowDefinition />
                                    <RowDefinition
										Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
									Grid.Row="1"
									Text="Customer Name :"
									FontWeight="DemiBold"
									Foreground="Orange"
									Margin="10 5 0 0"
									FontFamily="Segoe UI Historic"
									FontSize="12"
									VerticalAlignment="Bottom"
									TextAlignment="Left" />
                                <Grid
									Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
											Width="Auto" />
                                        <ColumnDefinition
											Width="Auto" />
                                        <ColumnDefinition
											Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox
										ItemsSource="{Binding ComboItems}"
										SelectedItem="{Binding SelectedCBItem}"
										IsTextSearchEnabled="False"
										IsEditable="True"
										Name="cmb"
										Grid.Column="0"
										HorizontalAlignment="Left"
										VerticalAlignment="Top"
										FontFamily="Segoe UI"
										FontStyle="Normal"
										FontSize="18"
										Margin="10 10 10 0"
										Height="35"
										MaxHeight="40"
										Width="400"
										MaxWidth="450" />
                                    <Button
										Margin="0 10 10 0"
										Padding="10 10 10 10"
										Grid.Column="1"
										FontSize="15"
										VerticalAlignment="Top"
										Height="35"
										Width="35"
										x:Name="button3"
										Command="{Binding SearchButtonClicked}">
                                        <fa:ImageAwesome
											Icon="Search"
											Foreground="#304FFE"
											Height="20"
											Width="25" />
                                    </Button>
                                    <TextBlock Text="{Binding myInfo}"
									           Name="infotext"
									           Grid.Column="2"
									           FontWeight="Normal"
									           VerticalAlignment="Top"
									           HorizontalAlignment="Stretch"
									           Margin="20 10 10 0"
									           Foreground="#65c966"
									           FontFamily="Segoe Print"
									           FontSize="20"
									           TextAlignment="Right" />
                                </Grid>
                                <TextBlock Text="{Binding CityName}"
								           Grid.Row="4"
								           Name="lblCity"
								           FontWeight="DemiBold"
								           Foreground="DarkTurquoise"
								           Margin="10 0 12 10"
								           FontFamily="Segoe UI Historic"
								           FontSize="12"
								           TextAlignment="Right" />
                                <Grid
									Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
											Width="*" />
                                        <ColumnDefinition
											Width="*" />
                                        <ColumnDefinition
											Width="*" />
                                        <ColumnDefinition
											Width="*" />
                                        <ColumnDefinition
											Width="*" />
                                        <ColumnDefinition
											Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
										Name="billsTxtBox"
										Grid.Column="0"
										HorizontalAlignment="Left"
										FontWeight="DemiBold"
										Foreground="#bab4f0"
										Margin="10 35 5 5"
										VerticalAlignment="Bottom"
										FontFamily="Segoe UI Historic"
										FontSize="12"
										TextAlignment="Left" />
                                    <TextBlock
										x:Name="txtbills"
										Text="BILLS"
										Grid.Column="1"
										FontWeight="DemiBold"
										TextDecorations="Underline"
										Foreground="#f2e44b"
										Margin="15 30 0 0"
										FontFamily="Segoe UI Historic"
										FontSize="12"
										TextAlignment="Center" />
                                    <Button
										x:Name="billselection"
										Margin="10 35 5 5"
										Grid.Column="2"
										Foreground="Brown"
										FontSize="15"
										FontWeight="ExtraBold"
										HorizontalAlignment="Right"
										VerticalAlignment="Top"
										Height="28"
										Width="28"
										ToolTip="Invert Selection">
                                        <fa:ImageAwesome
											Icon="ThList"
											Foreground="#7C4DFF"
											Height="15"
											Width="15" />
                                    </Button>
                                    <TextBlock
										Name="cndnTxtBox"
										Grid.Column="3"
										HorizontalAlignment="Left"
										FontWeight="DemiBold"
										Foreground="#bab4f0"
										Margin="15 35 5 5"
										VerticalAlignment="Bottom"
										FontFamily="Segoe UI Historic"
										FontSize="12"
										TextAlignment="Left" />
                                    <TextBlock
										x:Name="txtcndn"
										Text="Credit/Debit Notes"
										Grid.Column="4"
										FontWeight="DemiBold"
										TextDecorations="Underline"
										Foreground="#f2e44b"
										Margin="15 30 0 0"
										FontFamily="Segoe UI Historic"
										FontSize="12"
										TextAlignment="Center" />
                                    <Button
